<h2>Search for hiking trails in your area</h2>
<form method="GET" action="/trails/search-results">
    <input type="number" name="latitude" placeholder="Latitude"><br>
    <input type="number" name="longitude" placeholder="Longitude"><br>
    <input type="submit">
</form>

<ul>
    <% trails.forEach((trail) => { %>
        <li><%= trail.name %> <%= trail.length %>
            <a href="/trails/show/<%= %>">Show details</a> <!-- inside of the squids, I need to put in some kind of index referencing each element of the array-->
        </li>
    <% }) %>
</ul>