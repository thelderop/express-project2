<div id="register">
    <form action="/auth/register" method="POST">
        <div class="form-group">
            <label for="authEmail">Email</label>
            <input class="text-field" id="authEmail" class="form-control" type="email" name="email">
        </div>
        <div class="form-group">
            <label for="authName">Name</label>
            <input class="text-field" id="authName" class="form-control" type="text" name="name">
        </div>
        <div class="form-group">
            <label for="authPassword">Password</label>
            <input class="text-field" id="authPassword" class="form-control" type="password" name="password">
        </div>
        <input class="btn" type="submit">
    </form>
</div>